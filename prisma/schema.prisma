// delivery hoye gele delivered dekhabe
model SaleOrder {
  id            Int      @id @default(autoincrement())
  order         Order    @relation(fields: [orderId], references: [id])
  orderId       Int      @unique
  total_amount  Int
  paid          Int
  due           Int
  sale_date     DateTime @default(now())
  order_status  String   @default("ongoing")
}
